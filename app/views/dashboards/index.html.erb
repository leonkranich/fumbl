          <input type="radio" id="tab<%=index%>" name="tabGroup<%=index%>" class="tab-dashboard">
          <label for="tab<%=index%>"><%=teacher.first_name%></label>
        <% end %>
        <div class="tab-dashboard__content-1">
          <!-- <a hrf="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" download> -->
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
